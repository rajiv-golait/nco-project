# Model configuration
EMBED_MODEL=intfloat/multilingual-e5-small

# Confidence thresholds
LOWCONF_SOFTMAX=0.55
LOWCONF_TOPSIM=0.48

# Translation (disabled by default)
ENABLE_TRANSLATION=false

# CORS (comma-separated origins)
CORS_ORIGINS=*

# Admin (optional - set to secure token in production)
ADMIN_TOKEN=changeme

# Rate limiting
RATE_LIMIT_SEARCH=60/minute
RATE_LIMIT_ADMIN=20/minute

# Privacy
DISABLE_UA_LOGGING=false

# Build metadata (set in CI/CD)
BUILD_TIME=
GIT_SHA=

# Testing (leave unset in prod)
# ALLOW_TEST_RATE_KEY=true  # enables x-rate-key header for test isolation

# Server
HOST=0.0.0.0
PORT=8000